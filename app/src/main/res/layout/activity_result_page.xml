<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="10dp"
    android:elevation="5dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultPage">

    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matdaan"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="30dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Election Commission Of India"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:background="@color/flag_orange"
            android:layout_marginTop="25dp"/>
        <ImageView
            android:id="@+id/ashokaLoin"
            android:layout_marginTop="35dp"
            android:layout_width="30dp"
            android:layout_height="40dp"

            android:src="@drawable/anthemlogo"/>


    </RelativeLayout>



    <!---      Score Board  -->
    <TextView
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Score Board  :-"/>
    <TextView
        android:textColor="@color/black"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--------------------------------------------------------------------------------------------------"/>
    
    

    <!--         Party Scores        -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <!--  Header Tag -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <TextView
                    android:textSize="17dp"
                   android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Symbal"/>
                <TextView
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="130dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Party Name"/>
                <TextView
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="300dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Votes"/>

                <TextView
                    android:textColor="@color/black"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="--------------------------------------------------------------------------------------------------"/>



            </RelativeLayout>


            <!-- Party 1   -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                >

                <ImageView

                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="Election Symbol"
                    android:src="@drawable/bjp_symbal"/>
                <TextView
                    android:id="@+id/party1"
                    android:textSize="16dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="130dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Bhartiya Janata Party"/>
                <TextView

                    android:layout_marginTop="35dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="130dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="( BJP )"/>

                <TextView
            android:id="@+id/party1Count"
                    android:textSize="20dp"
                    android:textColor="@color/black"
            android:layout_marginLeft="330dp"

            android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:text="50"/>

            </RelativeLayout>

            <!-- party 2  -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                <ImageView

                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="Election Symbol"
                    android:src="@drawable/india_alliance"/>
                <TextView
                    android:id="@+id/party2"
                    android:textSize="16dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="130dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="India Alliance"/>
                <TextView

                    android:layout_marginTop="35dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="130dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="( I.N.D.I.A )"/>
                <TextView
                    android:textSize="20dp"
                    android:id="@+id/party2Count"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="330dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"/>

            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
   <!-- party 3 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <ImageView

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="Election Symbol"
            android:src="@drawable/tda_logo"/>
        <TextView
            android:id="@+id/party3"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="TheDeepAmar"/>
        <TextView

            android:layout_marginTop="35dp"
            android:textColor="@color/black"
            android:layout_marginLeft="130dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="( TDA )"/>
        <TextView
            android:id="@+id/party3Count"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="330dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="50"/>

    </RelativeLayout>

    <!--    Winner board   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- Party 1   -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/winnerID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Winner : "
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/winnerTextView"
                    android:textSize="18dp"

                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="90dp"
                    android:text="name" />

            </RelativeLayout>

            <!-- party 2  -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
               >
                <TextView
                    android:id="@+id/runnerUpID"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Runner Up : "/>
                <TextView
                    android:id="@+id/runnerUpTextView"
                    android:textSize="18dp"
                    android:layout_marginLeft="120dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="name"/>

            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
      android:background="@color/blue"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="Fact Sheet"/>
        <TextView
            android:textColor="@color/black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="--------------------------------------------------------------------------------------------------"/>




    </RelativeLayout>

    <!--       Total Voting   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        >


        <TextView
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Voters : "/>
        <TextView
            android:id="@+id/totalVote"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="140dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/black"
            android:text="50"/>
        <!--
        <ProgressBar
            android:progressTint="@color/black"
            android:progressBackgroundTint="@color/light_black"
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/totalVoteProgressBar"
            android:layout_marginLeft="190dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            />  -->
    </RelativeLayout>

    <!-- Total Vote processBar  -->



    <!-- Sax Ratio of Voters   -->
    <!-- Female Ratio -->
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <TextView
            android:textStyle="bold"
            android:textSize="18dp"
           android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female Voters : "/>
        <TextView
            android:id="@+id/femaleVoters"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="140dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"/>
        <ProgressBar
            android:progressTint="@color/red"
            android:progressBackgroundTint="@color/light_red"

            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/femaleProgressBar"
            android:layout_marginLeft="190dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>



<!-- Female ProcessBar  -->




    <!-- Male Ratio     -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp">

        <TextView
             android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male Voters : "/>
        <TextView
            android:id="@+id/maleVoters"

            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="140dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"/>

        <ProgressBar
            android:progressTint="@color/blue"
            android:progressBackgroundTint="@color/light_blue"
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/maleProgressBar"
            android:layout_marginLeft="190dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>




<!-- Thanks  -->
    <TextView

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Thanks"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20dp"
        android:background="@color/flag_green"
        android:layout_marginTop="35dp"/>



</LinearLayout>